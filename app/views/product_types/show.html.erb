<%- model_class = ProductType -%>
<div class="page-header">
  <h1>Produktkategori</h1>
</div>

<dl class="dl-horizontal">
  <dt><strong>Navn:</strong></dt>
  <dd><%= @product_type.name %></dd>
  <dt><strong>Beskrivelse:</strong></dt>
  <dd><%= @product_type.desc %></dd>
</dl>

<div class="form-actions">
  <%= link_to "Tilbake",
              product_types_path, :class => 'btn'  %>
  <%= link_to "Rediger",
              edit_product_type_path(@product_type), :class => 'btn' %>
  <%= link_to "Slett",
              product_type_path(@product_type),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Er du sikker?')) },
              :class => 'btn btn-danger' %>
</div>
