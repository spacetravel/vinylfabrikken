<%= simple_form_for @product_type, :html => { :class => 'form-horizontal' } do |f| %>
<fieldset>
  <legend><%= controller.action_name.capitalize %> Produktkategori</legend>

  <%= f.input :name %>
  	<%= f.input :desc %>
 
  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to 'Cancel', product_types_path, :class => 'btn' %>
  </div>
</fieldset>
<% end %>
