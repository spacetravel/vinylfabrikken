<%= simple_form_for @product_type, :html => { :class => 'form-horizontal' } do |f| %>
<fieldset>

  <%= f.input :name, label: "Navn" %>
  	<%= f.input :desc, label: "Beskrivelse" %>
 
  <div class="form-actions">
    <%= f.submit "Opprett kategori", :class => 'btn btn-primary' %>
    <%= link_to 'Avbryt', product_types_path, :class => 'btn' %>
  </div>
</fieldset>
<% end %>
