<%- model_class = News -%>
<div class="page-header">
  <h1>Nyheter</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Id</th>
      <th>Tittel</th>
      <th>Ingress</th>
      <th>Br√∏dtekst</th>
      <th>Opprettet</th>
      <th>Handlinger</th>
    </tr>
  </thead>
  <tbody>
    <% @news.each do |news| %>
      <tr>
        <td><%= link_to news.id, admin_news_path(news) %></td>
        <td><%= news.title %></td>
        <td><%= news.ingress %></td>
        <td><%= news.body %></td>
        <td><%= news.created_at.strftime("%d. %B %Y") %></td>
        <td>
          <%= link_to "Rediger",
                      edit_admin_news_path(news), :class => 'btn btn-mini' %>
          <%= link_to "Slett",
                      admin_news_path(news),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Er du sikker?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Ny nyhet",
            new_admin_news_path,
            :class => 'btn btn-primary' %>
