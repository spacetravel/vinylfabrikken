<%- model_class = Product -%>
<div class="page-header">
  <h1>Produkter</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Navn</th>
      <th>Beskrivelse</th>
      <th>Enhetspris</th>
      <th>Kategori</th>
      <th>Opprettet</th>
      <th>Handlinger</th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= link_to product.id, product_path(product) %></td>
        <td><b><%= product.name %></b></td>
        <td><%= product.desc %></td>
        <td><%= product.price %></td>
        <td><%= product.product_type.name %></td>
        <td><%= product.created_at.strftime("%d. %B %Y") %></td>
        <td>
          <%= link_to "Rediger",
                      edit_product_path(product), :class => 'btn btn-mini' %>
          <%= link_to "Slett",
                      product_path(product),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Er du helt sikker?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Nytt produkt",
            new_product_path,
            :class => 'btn btn-primary' %>
