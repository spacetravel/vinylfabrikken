<%= simple_form_for @product, :html => { :class => 'form-horizontal' } do |f| %>
  
<fieldset>


  <%= f.input :name, label: "Navn" %>
  	<%= f.input :desc, label: "Beskrivelse" %>
    <%= f.input :price, label: "Pris" %>
    <%= f.association :product_type, label: "Kategori" %>

  <div class="form-actions">
    <%= f.submit 'Opprett produkt', :class => 'btn btn-primary' %>
    <%= link_to 'Avbryt', products_path, :class => 'btn' %>
  </div>
</fieldset>

<% end %>
