<h2>Rediger profil</h2>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, label: "E-post" , :required => true, :autofocus => true %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    	<p>Venter på bekreftelse for: <%= resource.unconfirmed_email %></p>
    <% end %>

    <%= f.input :password, label: "Passord", :autocomplete => "off", :hint => "La stå tom hvis du ikke vil endre passord", :required => false %>
    <%= f.input :password_confirmation, label: "Brekreft passord", :required => false %>
    <%= f.input :current_password, label: "Gammelt passord", :hint => "Vi trenger ditt gamle passord for å endre profilen din", :required => true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Oppdater" %>
  </div>
<% end %>

<h3>Slett profil</h3>

<p>Misfornøyd? <%= link_to "Slett min profil", registration_path(resource_name), :data => { :confirm => "Er du sikker?" }, :method => :delete %>.</p>

<%= link_to "Tilbake", :back %>
