<h2>Opprett konto</h2>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, label: "E-post", :required => true, :autofocus => true %>
    <%= f.input :password, label: "Passord", :required => true %>
    <%= f.input :password_confirmation, label: "Bekreft passord", :required => true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Opprett" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
