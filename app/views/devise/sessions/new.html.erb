
<div class="span7 offset2">
  <div class="well form-horizontal" >
    <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
        
        <%= f.error_notification %>
      <legend style="font-family:Arial">Innlogging</legend>
    
      <div class="control-group">
            <label class="control-label">E-post</label>
        <div class="controls">
            <div class="input-prepend">
             <span class="add-on"><i class="icon-envelope"></i></span>    
              <%= f.input :email, :wrapper_html => { :class => "inline_field_wrapper" },  :required => true, label: false, class: 'email required', placeholder: 'E-post', :autofocus => true %>
             </div>
        </div>
      </div>
      <div class="control-group ">
            <label class="control-label">Passord</label>
        <div class="controls">
            <div class="input-prepend">
            <span class="add-on"><i class="icon-lock"></i></span>
              <%= f.input :password, :wrapper_html => { :class => "inline_field_wrapper" },  :required => true, label: false, class: 'password required', placeholder: 'Passord' %>
            </div>
        </div>
      </div>
      <div class="control-group ">
            <label class="control-label">Husk meg</label>
        <div class="controls">
            <div class="input-prepend">
            <span class="add-on"><i class="icon-question-sign"></i></span>
              <%= f.input :remember_me,  label: false, :wrapper_html => { :class => "inline_field_wrapper husk_meg_input" }, :as => :boolean if devise_mapping.rememberable? %>
            </div>
        </div>
      </div>
      <div class="control-group">
        <div class="controls">
              <%= f.button :submit, "Logg inn", :class => "btn btn-primary pull-right" %>
          </div>
        </div>
      </div>
      <div class="control-group">
        <label class="control-label"></label>
            <div class="controls">
              <%= render "devise/shared/links" %>
            </div>

      </div>
    <% end %>

     </div>
  </div>
</div>