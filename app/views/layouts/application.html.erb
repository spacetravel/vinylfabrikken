<!DOCTYPE html>
<html>
<head>
  <title>Vinylfabrikken</title>
  <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
  <![endif]-->
  <%= javascript_include_tag "application" %>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="icon" href="/assets/vinylicon.gif" />
</head>
<body class="container">
  <div class="navbar">
    <div class="navbar-inner">
      <div class="container" style="width: auto;">
        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </a>
        <a class="brand" href="/">Vinylfabrikken.no</a>
        <div class="nav-collapse">
          <ul class="nav">
            <li><%= link_to "Bestilling", new_order_path %></li>
        	<li><%= link_to "Priser" %></li>
        	<li><%= link_to "Utgivelser" %></li>
	      	<li><%= link_to "Om Vinylfabrikken" %></li>
     	
          </ul>
          <form class="navbar-search pull-left" action="">
            <input type="text" class="search-query span2" placeholder="SÃ¸k">
          </form>
          <ul class="nav pull-right">

            <li class="divider-vertical"></li>
          <% if user_signed_in? %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= current_user.email %> <b class="caret"></b></a>
              <ul class="dropdown-menu">
                <li>
			 	         	<%= link_to 'Mine bestillinger', orders_path %>
				        </li>
                <li>
				    			<%= link_to 'Rediger profil', edit_user_registration_path %>
      					</li>
                <li class="divider"></li>
                <li>
		    					<%= link_to "Logg ut", destroy_user_session_path, method: :delete %>
    						</li>

              </ul>
            </li>
  <% else %>
            <li>
              <%= link_to "Logg inn", new_user_session_path %>
            </li>
			   
			 	<% end %>  
       </ul>
        </div><!-- /.nav-collapse -->
      </div>
    </div><!-- /navbar-inner -->
  </div><!-- /navbar -->

		<div class="container">

	  <% flash.each do |name, msg| %>
	    <div class="alert alert-<%= name == :notice ? "success" : "error" %>">
	        <a class="close" data-dismiss="alert">x</a>
			<%= msg  %>
	    </div>
	  <% end %>
	  <!-- Rest of content -->
	</div>	

    <div class="container">
      <%= yield %>
    </div>
      <!-- FOOTER -->
    <footer>
      <p class="footer">&copy; 2013 Vinylfabrikken.no &middot; <a href="#">Kontakt oss</a> </p>
    </footer>
  </div>


	
<script type="text/javascript">
  $(function(){
    // You used .myCarousel here. 
    // That's the class selector not the id selector,
    // which is #myCarousel
    $('#myCarousel').carousel();
    $('.dropdown-toggle').dropdown()
  });

</script>
</body>
</html>
