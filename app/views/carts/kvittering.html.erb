
<div class="row">
	<div class="span12">
		<div class="offset1" style="font-size:32px;padding:30px 0 30px 0">Kvittering fra Vinylfabrikken</div>

		<div class="span5 pull-right" style="font-size:14px;padding:40px 0px 40px 0px">
			Bestillingsdato: <%= @invoice.invoice_date.strftime("%m/%d/%Y") %><br />
			Ordrenummer: #<%= @invoice.invoice_number %><br />
			Total sum: <%= number_to_currency(@invoice.total_sum) %> <br />
			Kontonummer: 1222.12.12321 <br />
			Betalingsfrist: <%= @invoice.invoice_deadline.strftime("%m/%d/%Y") %>
		</div>
		<div class="span5 pull-left offset1" style="font-size:18px;padding:40px 0px 40px 0px">
			<b>Vinylfabrikken AS</b><br />
			Pløens gate 4<br />
			0028 Oslo<br />
			Norge
		</div>
<br />


		<h3 class="span9 pull-left offset1">Varer</h3>


	<table class="table table-bordered table-striped span9 offset1">
		  <thead>
			  <tr>
				<th>Tittel</th>
				<th>Artist</th>
				<th>Antall</th>
				<th>Størrelse</th>
				<th>Pris</th>
				<th></th>
				<th></th>
			  </tr>
			</thead>
			<tbody>
				<div id="cart_line_items">
					<%= render :partial => '/line_items/line_item', :collection => @invoice.orders, :locals => { :where_to_render => 'kvittering'  } %>				
				</div>
			  <tr>
				<td>&nbsp;</td>
				<td>&nbsp;</td>
				<td>&nbsp;</td>
				<td>&nbsp;</td>
				<td><strong>4.700 NOK</strong></td>
				<td>&nbsp;</td>
				<th></th>
			  </tr>		  
			</tbody>
		  </table>

		<h3 class="span9 offset1 pull-left">Kundeinformasjon</h3>
		<table class="table table-striped span9 offset1">
			<thead>
				<tr>
					<th>Fornavn</th>
					<th>Etternavn</th>
					<th>Adresse</th>
					<th>Postnummer</th>
					<th>Poststed</th>
					<th>Land</th>
					<th>Betalingsmetode</th>
			</thead>
			<tbody>
			<tr>
				<td><%= @invoice.delivery_info.first_name %></td>
				<td><%= @invoice.delivery_info.last_name %></td>
				<td><%= @invoice.delivery_info.address1 %><br /><%= @invoice.delivery_info.address2 %></td>
				<td><%= @invoice.delivery_info.zipcode %></td>
				<td><%= @invoice.delivery_info.city %></td>
				<td><%= @invoice.delivery_info.country %></td>

				<td><%= @invoice.delivery_info.payment_method.title %></td>
			</tr>
			</tbody>
		</table>
		<div class="span9 offset1">
			<a  class="btn btn-inverse pull-right" style="color:white" href="#"><i class="icon-print"></i> Skriv ut</a>					 
	    	  <a  class="btn btn-inverse pull-left" style="color:white" href="#"><i class="icon-download-alt"></i> Last ned som PDF</a>
		</div>
	</div>
</div>