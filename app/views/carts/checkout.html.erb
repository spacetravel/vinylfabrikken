								<div class="control-group">
									<label class="control-label">Passord</label>
									<div class="controls">
								  <%= f.password_field :password, placeholder: 'Skriv inn passord', class: 'input-xlarge' %>
									</div>
								</div>

							  <%= f.submit 'Logg inn', class: 'btn btn-primary pull-right' %>

							</fieldset>
						<% end %>
				    </div>				  
                </div>
