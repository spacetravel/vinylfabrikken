<%- model_class = News -%>
<div class="page-header">
  <h1>Nyhetssak</h1>
</div>

<dl class="dl-horizontal">
  <dt><strong>Tittel:</strong></dt>
  <dd><%= @news.title %></dd>
  <dt><strong>Ingress:</strong></dt>
  <dd><%= @news.ingress %></dd>
  <dt><strong>Br√∏dtekst:</strong></dt>
  <dd><%= @news.body %></dd>
</dl>

<div class="form-actions">
  <%= link_to "Tilbake",
              news_index_path, :class => 'btn'  %>
  <%= link_to "Rediger",
              edit_news_path(@news), :class => 'btn' %>
  <%= link_to "Slett",
              news_path(@news),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Er du sikker?')) },
              :class => 'btn btn-danger' %>
</div>
