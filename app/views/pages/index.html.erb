<%- model_class = Page -%>
<div class="page-header">
  <h1>Sider</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Id</th>
      <th>Tittel</th>
      <th>Ingress</th>
      <th>Br√∏dtekst</th>
      <th>Opprettet</th>
      <th>Handlinger</th>
    </tr>
  </thead>
  <tbody>
    <% @pages.each do |page| %>
      <tr>
        <td><%= link_to page.id, page_path(page) %></td>
        <td><b><%= page.title %></b></td>
        <td><%= page.ingress %></td>
        <td><%= page.body %></td>
        <td><%= page.created_at.strftime("%d. %B %Y") %></td>
        <td>
          <%= link_to "Rediger",
                      edit_page_path(page), :class => 'btn btn-mini' %>
          <%= link_to "Slett",
                      page_path(page),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Er du sikker?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Ny side",
            new_page_path,
            :class => 'btn btn-primary' %>
