<div class="progress orderline toggle-button">
		<div class="btn btn-inverse" style="width:100%;">
      <i id="plusminusicon" class="icon-plus-sign" style="float:left;padding-top:5px"></i>
      <span class="orderline_title"><b>GRAVERING</b></span>
      <span class="btn btn-success btn-mini orderline_status">Ferdig</span>
      <span id="gravering_status_text" class="orderline_status_text">45 rpm</span>
		</div>
  </div>
  <div class="toggle-info"> 
    <table class="table orderline">
      <tr>
        <td colspan="2">
          <i class="icon-info-sign icon-2x pull-right order_info" style="padding:5px"></i>

          <div class="infoBox">
            <%= get_info_text('gravering').desc %>
          </div>
          <div class="infoTextBox">
            <%= get_info_text('gravering').short_desc %>
          </div>
        </td>
      </tr>

    <%= f.fields_for :gravering do |gravering_fields| %>
      <tr>
        <td><b>Side A</b></td>
        <td style="text-align:right;font-weight:bold">
          <%= gravering_fields.select(:side_a_rpm, [['45 rpm', '45 rpm'], ['33 1/3 rpm', '33 1/3 rpm']]) %>  
        </td>
      </tr>
      <tr>
        <td><b>Side B</b></td>
        <td style="text-align:right;font-weight:bold">
           <%= gravering_fields.select(:side_b_rpm, [['45 rpm', '45 rpm'], ['33 1/3 rpm', '33 1/3 rpm']]) %>  

        </td>
      </tr>
       <tr>
        <td class="orderprice">Pris</td>
        <td id="gravering_price" style="text-align:right;font-weight:bold">0 kr</td>
      </tr>
      <tr>
        <td colspan="2" class="span8">

            <%= s3_uploader_form post: tracks_url, as: "track[file_url]", id: "uploader_x" do %><% end %>
            <%= gravering_fields.fields_for :sides do |side| %>
            <div class="span4 gravering_upload_side">Side <%= side.object.side_num + 1 %>
          <br /><br />

                <div class="pull-left" style="width:30px;text-align:center">#</div>
                <div class="upload_spor pull-left">Tittel</div>
                <div class="upload_duration pull-right">
                    M &nbsp;&nbsp; S
                </div>
                <div class="clearfix"></div>
              <% track_counter = 1 %>
              <%= side.fields_for :tracks do |track| %>
                <div class="upload_spor_num pull-left"><%= track.text_field :track_num, :value => track_counter, :maxlength => 2, size: 2 %></div>
                <div class="upload_spor pull-left"><%= track.text_field :name, placeholder: 'Tittel pÃ¥ sporet' %></div>
                <div class="upload_duration pull-right">
                                <%= track.text_field :duration_mins, :maxlength => 2, size: 2 %>
                                <%= track.text_field :duration_secs, :maxlength => 2, size: 2 %>

                </div>
                <%= link_to '<i class="icon-remove icon-large pull-right order_info" style="padding-top:5px;color:white"></i>'.html_safe %>      
                <div class="clearfix"></div>

                <% upload_id = "_"+ (side.object.side_num + 1).to_s + "_" + track_counter.to_s %>
                <div id="track<%= upload_id %>" class="pull-left">
                    <%= track.hidden_field :file_url %>
                    <% unless track.object.id.nil? %>
                      <%= link_to track.object.name, track.object.file_url, style:'color:white' %>
                    <% end %>
                </div> 
                <br />
                <%= s3_uploader_form post: tracks_url+"?side_num="+(side.object.side_num + 1).to_s+"&track_num="+track_counter.to_s, as: "track[file_url]", id: "uploader"+upload_id do %>
                  
                  <%= file_field_tag :file, class: 'pull-left' %>

                <% end %>
                <div class="pull-left">
                 <script id="template-upload" type="text/x-tmpl">
                  <div class="upload">
                    <br />
                      {%=o.name%}
                    <div class="progress"><div class="bar" style="width: 0%;height:40px;"></div></div>
                  </div>
                  </script>

                </div>

                <div class="clearfix"></div>

                <% track_counter += 1 %>
              <% end %>
              <div class="pull-right">
                 <i id="plusminusicon" class="icon-plus-sign icon-2x"></i>
              </div>
             </div>

          <% end %>
        
        </td>
      </tr>

      <tr>
        <td class="orderprice" colspan="2">Kommentarer</td>
      </tr>
       <tr>
        <td  colspan="2"><%= gravering_fields.text_area :comments, :size => "70x6", class: 'span9'  %></td>
      </tr>
    <% end %>
    </table>

</div>