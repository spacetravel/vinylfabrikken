<%= form_for @order do |f| %>
<div class="span9 offset1">	

  <div id="orderDetails" class="orderDetails">
    <fieldset>
     <div style="font-size:2em;padding-bottom:20px;">
        Min bestilling 
        <div class="pull-right">
          <i class="icon-info-sign  pull-right order_info" style="padding:5px"></i>
          <div class="infoBox">Hjelp til bestilling          </div>
        </div>

    </div>
    <div style="span10">
      <div class="span3" style="">
          <div class="control-group">
              <label class="control-label"><%= f.label "Tittel på produksjonen" %></label>
              <div class="controls">
                <div class="input-prepend">
                 <span class="add-on"  style="background-color:black"><i class="icon-play-circle " style="background-color:black"></i></span>
                   
                  <%= f.text_field :title, :size => 10, placeholder: "F.eks. Abbey Road" %>  
              </div>
            </div>
          </div>

          <div class="control-group">
              <label class="control-label"> <%= f.label "Artist" %> </label>
              <div class="controls">
                <div class="input-prepend">
                 <span class="add-on"  style="background-color:black"><i class="icon-music " style="background-color:black"></i></span>
                   
                  <%= f.text_field :artist, placeholder: "F.eks. The Beatles" %>
              </div>
            </div>
          </div>

       

          <div class="control-group">
              <label class="control-label"> 
              <%= f.label "Katalognummer" %>  </label>
              <div class="controls">
                <div class="input-prepend">
                 <span class="add-on"  style="background-color:black"><i class="icon-barcode " style="background-color:black"></i></span>
                   
                   <%= f.text_field :catalogue_number, placeholder: "F.eks. VF001" %>
              </div>
            </div>
          </div>

       
      </div>
      
      <div class="span2" style="padding-right:40px">
             

          <div class="control-group">
              <label class="control-label"> 
                 <%= f.label "Levering" %></label>
              <div class="controls">
                <div class="input-prepend">
                 <span class="add-on"  style="background-color:black"><i class="icon-truck " style="background-color:black"></i></span>
                   
                   <%= collection_select(:order, :delivery_method_id, DeliveryMethod.all, :id, :name, :class => 'leverings_metode_dropdown') %>
              </div>
            </div>
          </div>

       
        

        <%= f.label "Størrelse" %>
        <%= select(:order, :record_size, [['12"', '12"'], ['10"', '10"'], ['7"','7"']]) %>

        <%= f.label "Opplag" %>

        <%= f.range_field(:quantity, {:step => 5, :in => 0...5001}) %>

          <p class="note"><span id="range-small">0</span> stk</p>
      </div>
      <div class="span3" style="">
        <%= f.label "Type" %>
        <%= select(:order, :number_of_records, [['Enkel', 1], ['Dobbel', 2], ['Trippel', 3]]) %>

        <%= f.label "Hastighet (rpm)" %>
        <%= select(:order, :rpm, [['45 rpm', '45 rpm'], ['33 1/3 rpm', '33 1/3 rpm']]) %>

        <div style="font-size:18px">
          Antall plater<br /><br /> 
          <input type="text" id="range" maxlength="5" max="5000"></span>
        </div>      
      </div>

    </div>
          
  </fieldset>
  
  </div>

</div>

<div class="span9 offset1">	
    <fieldset>
   		
      <div id="gravering_line">
        <%= render :partial => 'gravering', :locals => {  :f => f, :rpm => @order.rpm } %>
      </div>

      <div id="matrix_line">
        <%= render :partial => 'matriser', :locals => {  :f => f} %>
      </div>

      <div id="provetrykk_line">
        <%= render :partial => 'provetrykk', :locals => {  :f => f} %>
      </div>

      <div id="pressing_line">
        <%= render :partial => 'pressing', :locals => {  :f => f} %> 
      </div>

      <div id="label_line">
        <%= render :partial => 'labels', :locals => {  :f => f} %> 
      </div>

      <div id="cover_line">
        <%= render :partial => 'covers', :locals => {  :f => f} %> 
      </div>

<div class="progress orderline" style="height:50px;">
    <div class="btn btn-inverse" style="height:50px;width:100%;">
      <span class="orderline_title"><b>TOTAL PRIS: </b></span>
      <span class=" orderline_status">4500,00 kr</span>
    </div>
  </div>

  </fieldset>
    <br />
  
       <% if user_signed_in? %>
        <%= f.submit "Lagre i mine bestillinger",  class: 'btn btn-primary pull-left' %>
       <% else %>
         <%= f.submit "Lagre og gå videre", :class => 'btn btn-success pull-right' %>
       <% end %>
</div>

  
<script type="text/javascript">

</script>
  
<% end %>